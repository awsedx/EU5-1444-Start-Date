russian_principality = {#new reform for russian prin.
    age = age_1_traditions
    government = monarchy
    potential = {
        culture = { has_culture_group = culture_group:russian_group }
    }
    allow = {
        NOT = { country_rank = country_rank:rank_empire }
        religion = religion:orthodox
    }
    country_modifier = {
        monthly_towards_land = 0.1
        monthly_towards_serfdom = 0.2
        global_manpower_modifier = 0.05
        government_reform_slots = 1
        tax_income_efficiency = 0.05
        global_max_rgo_size_modifier = 0.1
    }

    locked = {
        is_locked_mechanic = {
            mechanic = government_reform
            type = russian_principality
        }
    }
    years = 1
}

imperator_romanorum = {#new reform for HRE Kaiser
	age = age_1_traditions
	government = monarchy
	potential = {
		is_member_of_international_organization = international_organization:hre
	}
	allow = {
		is_leader_of_international_organization = international_organization:hre
	}
	country_modifier = {
		monthly_towards_aristocracy = 0.2
		monthly_towards_land = 0.1
		government_reform_slots = 1
		global_manpower_modifier = 0.1
        tax_income_efficiency = 0.1
	}

	locked = {
		is_locked_mechanic = {
			mechanic = government_reform
			type = imperator_romanorum
		}
	}
	years = 1
}

austrian_archduchy_reform = {#HAB modified
	unique = yes
	government = monarchy
	potential = {
		ruler ?= { dynasty ?= dynasty:habsburg_dynasty }
	}
	allow = {
		has_or_had_tag = HAB
	}
	country_modifier = {
		monthly_diplomats = 0.1
		monthly_prestige = 0.1
		global_crown_estate_power = 0.2
		global_estate_max_tax = 0.05
		government_size = 1
		cultures_capacity = 3
	}

	locked = {
		is_member_of_international_organization = international_organization:hre
	}
	years = 2
}

act_of_union_reform = {#new reform for GBR
	age = age_1_traditions
	government = monarchy
	potential = {
		culture = culture:english
	}
	allow = {
		has_or_had_tag = GBR
		has_reform = government_reform:magna_carta_reform
		region:france_region = {
				any_ownable_location_in_region = {
					owner = {
						top_overlord_or_this ?= ROOT
					}
				count <= 5
			}
		}
		region:iberia_region = {
				any_ownable_location_in_region = {
					owner = {
						top_overlord_or_this ?= ROOT
					}
				count <= 5
			}
		}
		region:italy_region = {
				any_ownable_location_in_region = {
					owner = {
						top_overlord_or_this ?= ROOT
					}
				count <= 5
			}
		}
		region:scandinavian_region = {
				any_ownable_location_in_region = {
					owner = {
						top_overlord_or_this ?= ROOT
					}
				count <= 5
			}
		}
		region:north_german_region = {
				any_ownable_location_in_region = {
					owner = {
						top_overlord_or_this ?= ROOT
					}
				count <= 5
			}
		}
		region:south_german_region = {
				any_ownable_location_in_region = {
					owner = {
						top_overlord_or_this ?= ROOT
					}
				count <= 5
			}
		}
		region:baltic_region = {
				any_ownable_location_in_region = {
					owner = {
						top_overlord_or_this ?= ROOT
					}
				count <= 5
			}
		}
		region:russian_region = {
				any_ownable_location_in_region = {
					owner = {
						top_overlord_or_this ?= ROOT
					}
				count <= 5
			}
		}
	}
	country_modifier = {
		monthly_towards_naval = 0.2
		monthly_towards_capital_economy = 0.1
		monthly_towards_centralization = 0.1
		global_production_efficiency = 0.1
		global_distance_from_capital_cost_modifier = -0.05
		navy_maintenance_cost = -0.1
		government_size = 1
		cultures_capacity = 3
	}

	locked = {
		is_locked_mechanic = {
			mechanic = government_reform
			type = act_of_union_reform
		}
	}
	years = 1
}

magna_carta_reform = {#modified
	age = age_1_traditions
	government = monarchy
	potential = {
		OR = {
			has_or_had_tag = ENG
			culture = culture:english
			AND = {
				overlord ?= { has_reform = government_reform:magna_carta_reform }
			}
		}
	}
	allow = {
		has_embraced_institution = institution:legalism
	}
	country_modifier = {
		nobles_estate_target_satisfaction = 0.1
		global_nobles_estate_power = 0.25
		monthly_towards_free_subjects = 0.1
		monthly_towards_individualism = 0.2
		levy_combat_efficiency_modifier = 0.1
		parliament_base_support = 0.1
		government_reform_slots = 1
	}

	locked = {
		is_locked_mechanic = {
			mechanic = government_reform
			type = magna_carta_reform
		}
	}
	years = 2
}

representative_parliament_reform = {#modified
	unique = yes
	potential = {
		OR = {
			has_or_had_tag = ENG
			has_or_had_tag = GBR
		}
		has_variable = representative_government
		modifier:has_a_parliamentary_system = yes
	}
	allow = {
		societal_value:aristocracy_vs_plutocracy < 40
		societal_value:aristocracy_vs_plutocracy > -40
	}
	country_modifier = {
		global_peasants_estate_power = 0.25
		monthly_legitimacy = 0.1
		global_nobles_estate_power = -0.25
		global_burghers_estate_power = -0.25
		parliament_base_support = 0.33
		government_reform_slots = 1
	}

	years = 1
}

