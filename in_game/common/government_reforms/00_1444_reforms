benevolence_tax_reform = {#mod
	unique = yes
	potential = {
		OR = {
			has_or_had_tag = ENG
			has_or_had_tag = GBR
		}
		OR = {
			has_variable = benevolence_tax
			has_reform = government_reform:act_of_union_reform
		}
	}
	allow = {
		has_estate_privilege = estate_privilege:peasants_no_poll_tax_privilege
		"estate_power(estate_type:crown_estate)" >= 0.3
	}
	country_modifier = {
		nobles_estate_max_tax = 0.1
		tax_income_efficiency = 0.1
		nobles_estate_target_satisfaction = -0.05
		monthly_towards_centralization = 0.05
		monthly_towards_individualism = 0.1
		government_reform_slots = 1
	}

	years = 2
}

navy_board_reform = {#ENG MOD
	unique = yes
	potential = {
		OR = {
			has_or_had_tag = ENG
			has_or_had_tag = GBR
		}
		has_variable = navy_board
		num_of_ports >= 10
	}
	country_modifier = {
		monthly_towards_naval = societal_value_monthly_move
		sea_cost_on_distance_from_capital_when_maritime = -0.5
		navy_maintenance_cost = -0.1
		ship_build_speed = 0.15
	}

	years = 2
}

overhauled_admiralty_reform = {
	unique = yes
	potential = {
		OR = {
			has_or_had_tag = ENG
			has_or_had_tag = GBR
		}
		has_variable = overhauled_admiralty
	}
	allow = {
		OR = {
			has_reform = government_reform:navy_board_reform
			capital = {
				has_building_with_at_least_one_level = admiralty
			}
		}
	}
	country_modifier = {
		naval_unit_attrition = -0.25
		global_sailors_modifier = 0.15
		navy_heavy_ship_power = 0.05
		sea_cost_on_distance_from_capital_when_maritime = -1
	}

	years = 1
}

